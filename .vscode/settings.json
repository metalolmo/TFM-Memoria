{
  "files.associations": {
    "*.tex": "latex",
    "*.sty": "latex",
    "*.cls": "latex",
    "*.bib": "bibtex"
  },
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk-xe",
      "command": "latexmk",
      "args": [
        "-xelatex",
        "-interaction=nonstopmode",
        "-synctex=1",
        "%DOC%"
      ]
    },
    {
      "name": "bibtex",
      "command": "bibtex",
      "args": ["%DOCFILE%"]
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "XeLaTeX → BibTeX → XeLaTeX (2x)",
      "tools": ["latexmk-xe", "bibtex", "latexmk-xe", "latexmk-xe"]
    }
  ],
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.autoBuild.run": "never"
}